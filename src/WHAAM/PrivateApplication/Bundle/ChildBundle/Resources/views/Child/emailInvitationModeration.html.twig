{% set first %}{% trans from "email_invitation" %}email_invitation_moderation_first_paragraph{% endtrans %}{% endset %}
{% set second %}{% trans from "email_invitation" %}email_invitation_moderation_second_paragraph{% endtrans %}{% endset %}
{% set third %}{% trans from "email_invitation" %}email_invitation_moderation_third_paragraph{% endtrans %}{% endset %}
<html>
<head></head>
<body>
    <p>{% trans from "email_invitation" %}dear_user{% endtrans %},</p>
    <p>{{ first | format(childUserInvitation.child.getSurnameNameOrNickname,
        childUserInvitation.senderUser.surnameNameOrUsername,
        childUserInvitation.email) }}</p>

    <p>{{ second | format(childUserInvitation.email, childUserInvitation.child.getSurnameNameOrNickname) }}</p>

    <a href="{{ url('moderation_approval', { 'id': childUserInvitationModeration.id }) }}">
        {{ url('moderation_approval', { 'id': childUserInvitationModeration.id }) }}
    </a>

    <p>{{ third | format(childUserInvitation.email) }}</p>

    <a href="{{ url('moderation_refusal', { 'id': childUserInvitationModeration.id }) }}">
        {{ url('moderation_refusal', { 'id': childUserInvitationModeration.id }) }}
    </a>

    <p>{% trans from "email_invitation" %}best_regards{% endtrans %}</p>
    <p>{% trans from "email_invitation" %}signature_sentence{% endtrans %}</p>
</body>
</html>
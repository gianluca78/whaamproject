{% extends '::base_private.html.twig' %}

{% block navigation %}
    {{ include('WHAAMPrivateApplicationChildBundle:Child:menuAllEnabled.html.twig', {'child' : child}) }}
{% endblock %}

{% block breadcrumbs %}
    {{ render_breadcrumbs() }}
{% endblock %}

{% block body %}
    {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="Message Error">{{ flashMessage }}</div>
    {% endfor %}

    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="Message Information">{{ flashMessage }}</div>
    {% endfor %}

    {% for flashMessage in app.session.flashbag.get('warning-' ~ child.slug) %}
        <div class="Message Warning">{{ flashMessage|raw }}</div>
    {% endfor %}

    <div class="view-page">
        <div class="main-container">
            <div class="Box">
                <div class="Box-title"><h1>{% trans from "interface" %}school_information{% endtrans %}</h1></div>

                <div class="Box-table">
                    <div class="Box-table-row">
                        <div class="CellName"><strong>{% trans from "interface" %}school_year{% endtrans %}:</strong></div>
                        <div class="CellValue">{{ childSchoolInformation.year }}</div>
                    </div>
                </div>

                <div class="Box-table">
                    <div class="Box-table-row">
                        <div class="CellName"><strong>{% trans from "interface" %}school_name{% endtrans %}:</strong></div>
                        <div class="CellValue">{{ childSchoolInformation.schoolName }}</div>
                    </div>
                </div>

                <div class="Box-table">
                    <div class="Box-table-row">
                        <div class="CellName"><strong>{% trans from "interface" %}school_grade{% endtrans %}:</strong></div>
                        <div class="CellValue">{{ childSchoolInformation.grade }}</div>
                    </div>
                </div>

                <div class="Box-table">
                    <div class="Box-table-row">
                        <div class="CellName"><strong>{% trans from "interface" %}has_special_need_support{% endtrans %}:</strong></div>
                        <div class="CellValue">{{ childSchoolInformation.convertHasSpecialNeedSupportTeacherToString }}</div>
                    </div>
                </div>

                <div class="Box-table">
                    <div class="Box-table-row">
                        <div class="CellName"><strong>{% trans from "interface" %}has_iep{% endtrans %}:</strong></div>
                        <div class="CellValue">{{ childSchoolInformation.convertHasIndividualEducationPlanToString }}</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}